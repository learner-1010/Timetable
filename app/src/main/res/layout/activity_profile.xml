<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context=".ProfileActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/something"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_gravity="center_horizontal"
        android:text="Something"
        android:textStyle="bold"
        android:textColor="@color/welcome" />

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_btn"
        android:textStyle="bold"
        android:layout_alignRight="@+id/something"
        android:layout_alignBottom="@+id/something"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="9dp"
        android:text="logout" />




        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/asubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="AssignmentSubject" />

            <EditText
                android:id="@+id/adate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:hint="DueDate" />

            <EditText
                android:id="@+id/anum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:hint="AssigmentNum" />
            <Button
                android:id="@+id/updateAssi"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="170dp"
                android:layout_gravity="center_horizontal"

                android:background="@drawable/round_btn"
                android:text="UpdateAssigment"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Notice"
                android:layout_marginTop="300dp"/>
            <Button
                android:id="@+id/post"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_btn"
                android:textStyle="bold"
                android:text="Post"
                android:layout_marginTop="350dp"/>


        </RelativeLayout>



</RelativeLayout>>

    </ScrollView>

</RelativeLayout>